<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.comsafe"
    android:versionCode="1"
    android:versionName="0.0.2">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComSafe"
        tools:targetApi="31">
        <activity
            android:name="ViewController.MainActivity"
            android:exported="true" />
        <activity
            android:name="ViewController.ForgotActivity"
            android:exported="true" />
        <activity
            android:name="ViewController.FragmentHolderActivity"
            android:exported="true"/>
        <activity
            android:name="ViewController.ProfileEditActivity"
            android:exported="true"/>
        <activity
            android:name="ViewController.CarEditActivity"
            android:exported="true"/>
        <activity
            android:name="ViewController.CarAddActivity"
            android:exported="true"/>
        <activity
            android:name="ViewController.VisitEditActivity"
            android:exported="true"/>
        <activity
            android:name="ViewController.VisitAddActivity"
            android:exported="true"/>
        <activity
            android:name="ViewController.SplashScreen"
            android:exported="true"
            android:theme="@style/SplashScreenStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>