<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ComSafe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_escom</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_dark</item>
        <item name="colorSecondaryVariant">@color/blue_light</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="activity">
        <item name="android:padding">20dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="cardActivity">
        <item name="android:paddingBottom">20dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="card" parent="CardView">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="navMenuHeader">
        <item name="android:background">@color/blue_escom</item>
    </style>

    <style name="navMenu">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--Button styles-->
    <style name="mainButton">
        <item name="android:tint">@color/blue_escom</item>
    </style>

    <style name="normalButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/blue_escom</item>
    </style>

    <style name="badButton" parent="normalButton">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="addButton">
        <item name="android:src">@drawable/ic_add_24</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!--Forgot password-->
    <style name="toolbarForgot">
        <item name="android:background">@color/blue_escom</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <!--Login screen-->
    <style name="login" parent="activity">
        <item name="android:background">@drawable/ic_login_background</item>
    </style>
    <style name="imgLoginStyle">
        <item name="android:src">@drawable/ic_logo</item>
    </style>
    <style name="loginMailIcon">
        <item name="android:src">@drawable/ic_mail_24</item>
    </style>
    <style name="loginPassIcon">
        <item name="android:src">@drawable/ic_lock_24</item>
    </style>
    <style name="showPassword">
        <item name="android:src">@drawable/ic_eye_24</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <!--Main menu-->
    <style name="mainMenuPeopleIcon">
        <item name="android:src">@drawable/ic_people_24</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="mainMenuRegistrationIcon">
        <item name="android:src">@drawable/ic_registration_24</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <style name="mainMenuCarIcon">
        <item name="android:src">@drawable/ic_car_24</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <!--Profile info-->
    <style name="btnCopyStyle">
        <item name="android:src">@drawable/ic_copy_24</item>
    </style>

    <!--Profile edition-->
    <style name="btnCalendar">
        <item name="android:src">@drawable/ic_calendar_dark_24</item>
        <item name="android:backgroundTint">@color/blue_escom</item>
    </style>

    <!--Nav menu-->
    <style name="imgUser">
        <item name="android:src">@drawable/ic_user_24</item>
    </style>
    <style name="imgHome">
        <item name="android:src">@drawable/ic_home_24</item>
    </style>
    <style name="imgVisits">
        <item name="android:src">@drawable/ic_people_24</item>
    </style>
    <style name="imgReservations">
        <item name="android:src">@drawable/ic_registration_24</item>
    </style>
    <style name="imgCars">
        <item name="android:src">@drawable/ic_car_24</item>
    </style>
    <style name="imgReports">
        <item name="android:src">@drawable/ic_report_24</item>
    </style>
    <style name="imgComplaints">
        <item name="android:src">@drawable/ic_complaint_24</item>
    </style>

    <!--Splash screen-->
    <style name="SplashScreenStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen_definition</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>