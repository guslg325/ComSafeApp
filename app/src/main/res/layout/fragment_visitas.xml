<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/cardActivity">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvVisitas"
        style="@style/card">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:id="@+id/tvSubtitleVisitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:paddingBottom="10dp"
                android:textSize="30sp"
                android:text="@string/tvSubtitleVisitas"/>
            <TextView
                android:id="@+id/tvInstructionsVisitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvSubtitleVisitas"
                android:layout_toLeftOf="@id/btnAddVisitas"
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:text="@string/tvInstructionsVisitas"/>
            <ImageButton
                android:id="@+id/btnAddVisitas"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/tvSubtitleVisitas"
                style="@style/addButton"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <ListView
        android:id="@+id/lvRegistroVisitas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cvVisitas"/>

</RelativeLayout>